{
	"compilerOptions": {
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "paths": {
      "@alversoft/*": ["./*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2020",
    "typeRoots": ["node_modules/@types"],
  },
  "exclude": [
		"node_modules"
	],
	"include": ["src"]
}
